@using Microsoft.AspNetCore.Identity
@using ProDat.Web2.Areas.Identity.Data

@inject SignInManager<ProDatWeb2User> SignInManager
@inject UserManager<ProDatWeb2User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <td align="right">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
    </td>
    <td align="left">
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark" >Logout</button>
        </form>
    </td>
}
else
{
    <td>
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </td>
    <td>
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </td>
}
